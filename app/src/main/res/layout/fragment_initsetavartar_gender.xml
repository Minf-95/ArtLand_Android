<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/initSetAvartar_gender_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.artland.android.artland.fragments.InitSetAvartar_Gender_Fragment">


    <RelativeLayout
        android:id="@+id/relativeLayout_initSetAvartarGender_topMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView_initSetAvartarGender_back"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/arrowback" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout_initSetAvartarGender_topMenuContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareroundeb"
            android:text="성별을 선택하세요"
            android:textColor="#000000"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanumsquareroundeb"
            android:text="[내 아바타]에서 변경할 수 있습니다."
            android:textColor="#c4c4c4"
            android:textSize="14dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="horizontal"
            android:weightSum="2"

            >

            <Button
                android:id="@+id/button_initSetAvartarGender_Female"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/termofuse_agreebtn_border"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text="여성"
                android:textColor="#000000"
                android:textSize="16sp" />


            <Button
                android:id="@+id/button_initSetAvartarGender_male"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/termofuse_agreebtn_border"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text="남성"
                android:textColor="#000000"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>