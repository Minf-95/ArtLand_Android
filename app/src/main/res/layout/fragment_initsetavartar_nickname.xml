<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/initSetAvartar_nickname_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.artland.android.artland.fragments.InitSetAvartar_Nickname_Fragment">


    <RelativeLayout
        android:id="@+id/relativeLayout_initSetAvartarNickname_topMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:id="@+id/imageView_initSetAvartarNickname_back"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/arrowback" />


        <LinearLayout
            android:id="@+id/linearLayout_initSetAvartarNickanme_save"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/nomal_btn_border"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquareroundeb"
                android:text="완료"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView_initSetAvartarNickname_avartar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/avartar"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout_initSetAvartarNickname_topMenuContainer"
        />

    <LinearLayout
        android:id="@+id/linearLayoutt_initSetAvartarNickname_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/termofuse_agreebtn_border"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imageView_initSetAvartarNickname_avartar"
        >

        <EditText
            android:id="@+id/editText_initSetAvartarNickname_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="5"
            android:fontFamily="@font/nanumsquareroundeb"
            android:gravity="center"
            android:hint="닉네임을 입력해주세요(5자 이하)"
            android:inputType="text"
            android:maxLength="5"
            android:maxLines="1"
            android:text=""
            android:textSize="14sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>