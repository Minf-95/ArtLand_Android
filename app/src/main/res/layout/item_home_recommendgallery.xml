<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="210dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_outline"
            >
                <ImageView
                    android:id="@+id/imageView_homeRecommendGallery_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/pic3" />


                <LinearLayout
                    android:id="@+id/linearLayout_homeRecommendGallery_roomInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView_homeRecommendGallery_work"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linear_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/image_view"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginStart="-10dp"
                                    android:src="@drawable/participants"
                                    />
                                <TextView
                                    android:id="@+id/textView_homeRecommendGallery_currentParticipants"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:fontFamily="@font/nanumsquareroundeb"
                                    android:textColor="#000000"
                                    android:text="10"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:fontFamily="@font/nanumsquareroundeb"
                                    android:textColor="#000000"
                                    android:text="/"/>
                                <TextView
                                    android:id="@+id/textView_homeRecommendGallery_totalParticipants"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:fontFamily="@font/nanumsquareroundeb"
                                    android:textColor="#000000"
                                    android:text="12"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView_homeRecommendGallery_workTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:fontFamily="@font/nanumsquareroundeb"
                            android:textColor="#000000"
                            android:layout_marginTop="7dp"
                            android:text="서울 걷다"/>

                        <TextView
                            android:id="@+id/textView_homeRecommendGallery_workOwner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:fontFamily="@font/nanumsquareroundb"
                            android:textColor="#000000"
                            android:layout_marginTop="7dp"
                            android:text="홍길동"/>

                </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>







</androidx.cardview.widget.CardView>