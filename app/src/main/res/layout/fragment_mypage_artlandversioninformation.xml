<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.artland.android.artland.fragments.Mypage_ArtLandVersionInformation_Fragment">


    <RelativeLayout
        android:id="@+id/relativeLayout_artLandVersionInformation_topMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/textView_artLandVersionInformation_artland"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareroundeb"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="아트랜드 버전 정보"/>


        <LinearLayout
            android:id="@+id/linearLayout_artLandVersionInformation_closeContainer"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_mypageArtlandTermOfUse_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_close"
                app:tint="#000000"
                />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout_artLandVersionInformation_versionContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout_artLandVersionInformation_topMenuContainer"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/artlandlogo"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareroundeb"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:gravity="center"
            android:text="현재 버전: 0.0.0 | 최신 버전: 0.0.1"/>

